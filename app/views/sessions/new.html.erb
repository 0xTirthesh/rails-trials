<h1 class="center-align">
  Login
</h1>

<%= form_with model: @user, url: sessions_path do |form| %>
  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :email, placeholder: "Email" %>
  </div>

  <div>
    <%= form.password_field :password, placeholder: "Password" %>
  </div>

  <p>
    <%= form.submit 'Login' %>
  </p>
<% end %>